{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "composer install --optimize-autoloader --ignore-platform-reqs"
  },
  "deploy": {
    "startCommand": "php-fpm && nginx -c /app/nginx.conf",
    "restartPolicyType": "ON_FAILURE"
  }
}