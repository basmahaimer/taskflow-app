{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "composer install --optimize-autoloader --ignore-platform-reqs && php artisan optimize:clear"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT public/index.php",
    "restartPolicyType": "ON_FAILURE"
  }
  
}